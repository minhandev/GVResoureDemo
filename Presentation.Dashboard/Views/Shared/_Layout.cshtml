<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/fontawesome-pro-5.2.0-web/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/chartist.css" type="text/css" media="all">
    <link rel="stylesheet" type="text/css" href="~/css/feather.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link href="~/Kendoui/css/kendo.bootstrap-v4.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Kendoui/js/kendo.all.min.js"></script>
    <script src="~/Kendoui/js/jszip.min.js"></script>
    <script src="~/Kendoui/js/kendo.aspnetmvc.min.js"></script>
</head>
<body>
    <div class="loader-bg">
        <div class="loader-bar"></div>
    </div>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <nav class="navbar header-navbar pcoded-header">
                <div class="navbar-wrapper">
                    @* Lo go trang *@
                    <partial name="~/Views/Shared/Header/LogoView.cshtml" />
                    <div class="navbar-container container-fluid">
                        @* Thanh tìm kiếm *@
                        <ul class="nav-left">
                            <partial name="~/Views/Shared/Header/SearchView.cshtml" />
                        </ul>
                        @* Thanh người dùng *@
                        <ul class="nav-right">
                            @* Ngôn ngữ*@
                            <li class="header-notification">
                                <partial name="~/Views/Shared/Header/LanguageView.cshtml" />
                            </li>
                            @* Thông báo *@
                            <li class="header-notification">
                                <partial name="~/Views/Shared/Header/NotificationView.cshtml" />
                            </li>
                            @* Người dùng login *@
                            <li class="user-profile header-notification">
                                <partial name="~/Views/Shared/Header/UserProfileView.cshtml" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <nav class="pcoded-navbar">
                        <div class="nav-list">
                            <div class="pcoded-inner-navbar main-menu">
                                <div class="pcoded-navigation-label">Navigation</div>
                                <ul class="pcoded-item pcoded-left-item">
                                    <partial name="~/Views/Shared/Menu/Employee.cshtml" />
                                    <partial name="~/Views/Shared/Menu/Category.cshtml" />
                                    @*<li class="">
                                            <a href="navbar-light.html" class="waves-effect waves-dark">
                                                <span class="pcoded-micon">
                                                    <i class="feather icon-menu"></i>
                                                </span>
                                                <span class="pcoded-mtext">Navigation</span>
                                            </a>
                                        </li>*@
                                    @*<li class="pcoded-hasmenu">
                                            <a href="javascript:void(0)" class="waves-effect waves-dark">
                                                <span class="pcoded-micon">
                                                    <i class="feather icon-layers"></i>
                                                </span>
                                                <span class="pcoded-mtext">Widget</span>
                                                <span class="pcoded-badge label label-danger">100+</span>
                                            </a>
                                            <ul class="pcoded-submenu">
                                                <li class="">
                                                    <a href="widget-statistic.html" class="waves-effect waves-dark">
                                                        <span class="pcoded-mtext">Statistic</span>
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a href="widget-data.html" class="waves-effect waves-dark">
                                                        <span class="pcoded-mtext">Data</span>
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a href="widget-chart.html" class="waves-effect waves-dark">
                                                        <span class="pcoded-mtext">Chart Widget</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>*@
                                </ul>
                            </div>
                        </div>
                    </nav>
                    @* Nội dụng của trang *@
                    <div class="pcoded-content">
                        <div class="page-header card">
                            @* Nội dung chỉ đường *@
                            <partial name="~/Views/Shared/Content/ContentView.cshtml" />
                        </div>
                        @* Nội dung chính*@
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            @RenderBody()
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="styleSelector">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/fontawesome-pro-5.2.0-web/js/fontawesome.min.js"></script>
    <script src="~/js/pcoded.min.js"></script>
    <script src="~/js/rocket-loader.min.js"></script>
    <script src="~/js/vertical-layout.min.js"></script>
    <script src="~/js/custom-dashboard.min.js"></script>
    <script src="~/js/script.min.js"></script>
    <script src="~/jsContent/Common.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
